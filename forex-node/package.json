{
  "name": "forex-node",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register ./src/bin/server.ts",
    "start:prod": "node ./dist/index.js ----abort-on-uncaught-exceptions",
    "start:watch": "nodemon",
    "webpack:local": "npx webpack --config webpack.local.js",
    "webpack:production": "npx webpack --config webpack.production.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "kcors": "^2.2.2",
    "koa-bodyparser": "^4.2.1",
    "morgan": "~1.9.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1-alpha.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.7",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.7",
    "chai": "^4.2.0",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
